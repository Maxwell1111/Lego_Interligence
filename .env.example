# Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# MongoDB Configuration (optional, for build history)
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DATABASE=lego_architect

# LDraw Library Path (optional)
LDRAW_PATH=/path/to/ldraw

# Generation Settings
DEFAULT_MODEL=claude-opus-4-5-20251101
REFINEMENT_MODEL=claude-haiku-3-5-20241022
MAX_TOKENS=8192

# Cost Optimization
ENABLE_PROMPT_CACHING=true
CACHE_TTL_MINUTES=30

# Feature Flags
# Set to false to disable AI features (app will still work with manual building)
ENABLE_AI_FEATURES=true
